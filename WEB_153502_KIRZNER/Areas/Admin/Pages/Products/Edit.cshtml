@page
@model WEB_153502_KIRZNER.Areas.Admin.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование товара</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group mb-3">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 start-image">
                <label asp-for="Product.Image" class="control-label">Исходное изображение</label>
                <img src="@Model.Product.Image" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Image">Новое изображение</label>
                <div class="input-group" asp-for="@Model.Image">
                    <input type="file" class="form-control" asp-for="@Model.Image" accept="image/*">
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.CategoryNormalizedName" class="control-label"></label>
                <input asp-for="Product.CategoryNormalizedName" class="form-control" />
                <span asp-validation-for="Product.CategoryNormalizedName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-warning btn-block text-white" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-sm btn-outline-dark" asp-page="Index"><i class="fa-solid fa-arrow-left"></i> Вернуться к списку</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>

    .start-image img {
        height: 200px;
        object-fit: contain;
    }
</style>
