@page
@model WEB_153502_KIRZNER.Areas.Admin.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление товара</h1>

<h3>Вы уверены, что хотите удалить этот товар?</h3>
<div>
    <hr />
    <table class="table">
        <tbody>
            <tr>
                <th scope="row">Название</th>
                <td>@Model.Product.Name</td>
            </tr>
            <tr>
                <th scope="row">Описание</th>
                <td>@Model.Product.Description</td>
            </tr>
            <tr>
                <th scope="row">Цена</th>
                <td>@Model.Product.Price</td>
            </tr>
            <tr>
                <th scope="row">Изображение</th>
                <td>
                    <img src="@Model.Product.Image" />
                </td>
            </tr>
            <tr>
                <th scope="row">Категория</th>
                <td>@Model.Product.CategoryNormalizedName</td>
            </tr>
        </tbody>
    </table>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <a class="btn btn-sm btn-outline-dark" asp-page="Index"><i class="fa-solid fa-arrow-left"></i> Вернуться к списку </a>
        <input type="submit" value="Delete" class="btn btn-danger text-white" />
    </form>
</div>

<style>

    td img {
        height: 200px;
        object-fit: contain;
    }
</style>