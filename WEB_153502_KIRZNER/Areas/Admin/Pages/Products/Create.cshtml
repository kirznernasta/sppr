@page
@model WEB_153502_KIRZNER.Areas.Admin.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Создание товара</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Product.Name" class="control-label">Название</label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Description" class="control-label">Описание</label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Price" class="control-label">Цена</label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Image">Изображение</label>
                <div class="input-group" asp-for="@Model.Image">
                    <input type="file" class="form-control" asp-for="@Model.Image" accept="image/*">
                </div>
            </div>
            <div class="form-groupmb-3 ">
                <label asp-for="Product.CategoryNormalizedName" class="control-label">Категория</label>
                <input asp-for="Product.CategoryNormalizedName" class="form-control" />
                <span asp-validation-for="Product.CategoryNormalizedName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Создать" class="btn btn-primary text-white" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-sm btn-outline-dark" asp-page="Index"><i class="fa-solid fa-arrow-left"></i> Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
